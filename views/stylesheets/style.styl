rupture.mobile-cutoff = 460px
$bg-color = #fa5f5f
$spinner-color = rgba(2, 199, 242, 0.8)

*
  box-sizing: border-box
input:focus
  outline: none

html, body
  margin: 0
  height: 100%

body
  font: 16px 'Dosis', sans
  +mobile()
    font-size: 13px
  margin: 0
  padding: 0
  background: $bg-color

div#main-container
  center(960px)
  // +mobile()
  //   center(400px)
  height: 100%
  position: relative
  animation: scale-up 0.4s ease-out

@keyframes scale-up
  0%
    transform: scale(0)
  100%
    transform: scale(1)

div.overlay
  display: none
  position: fixed
  width: 100%
  height: 100%
  z-index: 10
  background: rgba(0, 0, 0, 0.8)

div.image-modal
  display: none
  align()
  width: 90%
  z-index: 15
  img
    width: 100%
    box-shadow: 0px 0px 20px 3px rgba(49, 49, 49, 0.5)
    animation: scale-up 0.15s

div.middle-pane
  align()
  top: 40%
  width: 100%
  text-align: center

  h1
    font-size: 4em
    margin: 0
    color: #dce00c
  h2
    font-size: 2em
    margin: 0.7em 0
    color: #545353
  input#url-input
    font-size: 1.7em
    padding: 0.5em
    background: #fbf5d7
    border: solid 1px #4e4e4e
    width: 80%
    color: #505050
    transition: background 0.2s, box-shadow 0.2s

    &:focus
      background: #f9f5df
      box-shadow: -1px -1px 15px 0 #4d4d4d

.dangle
  animation: dangle 4s ease-in-out
  transform-origin: 42%

@keyframes dangle
  0%
    transform: rotate(0deg)
  30%
    transform: rotate(110deg)
  50%
    transform: rotate(90deg)
  95%
    transform: rotate(-5deg)
  100%
    transform: rotate(0deg)

// Loader
.loader,
.loader:before,
.loader:after
  background: $spinner-color
  -webkit-animation: load1 1s infinite ease-in-out
  animation: load1 1s infinite ease-in-out
  width: 1em
  height: 4em
  top: 50%

.loader:before,
.loader:after
  position: absolute
  top: 0
  content: ''

.loader:before
  left: -1.5em
  -webkit-animation-delay: -0.32s
  animation-delay: -0.32s

.loader
  text-indent: -9999em
  margin: 88px auto
  position: relative
  font-size: 11px
  -webkit-transform: translateZ(0)
  -ms-transform: translateZ(0)
  transform: translateZ(0)
  -webkit-animation-delay: -0.16s
  animation-delay: -0.16s

.loader:after
  left: 1.5em

@-webkit-keyframes load1
  0%,
  80%,
  100%
    box-shadow: 0 0 $spinner-color
    height: 4em

  40%
    box-shadow: 0 -2em $spinner-color
    height: 5em
@keyframes load1
  0%,
  80%,
  100%
    box-shadow: 0 0 $spinner-color
    height: 4em

  40%
    box-shadow: 0 -2em $spinner-color
    height: 5em
